{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "target": "es2022",
    "allowJs": true,
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "incremental": true,
    "skipLibCheck": true
  },
  "include": ["./src"],
  "exclude": ["**/node_modules"],
  "references": [
    {
      "path": "../../packages/tools/ts-config"
    }
  ]
}
